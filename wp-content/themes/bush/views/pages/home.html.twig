{% extends 'template/main.html.twig' %}
{% block pre_content %}
    <div class="expanded row" id="home-slider">
        {{ rev_slider | raw }}
    </div>
{% endblock %}
{% block content %}
    <div class="row" id="home-content">
        <div class="small-12 columns">
            {{ content | raw }}
        </div>
    </div>

    <div class="row">
        <div class="small-6 columns">
            <h4 class="text-primary-3">{{ blogs_title }}</h4>
        </div>
        <div class="small-6 columns text-right">
            {% if blogs_url %}<h4><a href="{{ blogs_url }}" class="large button">More</a></h4>{% endif %}
        </div>
    </div>
    <div class="row small-up-1 medium-up-2 large-up-4 teasers">
        {% for post in blogs %}
            <div class="column">
                {{ post | raw }}
            </div>
        {% endfor %}
        <div class="column text-center">
            <article id="teaser-ad" {{ post_class('recipe-teaser teaser') }}>
                <div class="teaser-content" style="background-size: cover; background-position: center center; background-image: url('{{ the_field("ad_1_bg_image", "option") }}');">
                    {% set adimg = the_field('ad_1_image', 'option') %}
                    {% if adimg != null %}
                        <img src="{{ the_field("ad_1_image", "option") }}" alt="">
                    {% endif %}
                    <h3>{{ the_field("ad_1_text", "option") }}</h3>
                    <h5><a target="_blank" href="{{ the_field("ad_1_url", "option") }}" class="button hollow">{{ the_field("ad_1_btn_text", "option") }}</a></h5>
                </div>
            </article>
        </div>
    </div>

    <div class="row">
        <div class="small-6 columns">
            <h4 class="text-primary-3">{{ featured_recipes_title }}</h4>
        </div>
        <div class="small-6 columns text-right">
            {% if featured_recipes_url %}<h4><a href="{{ featured_recipes_url }}" class="large button">More</a></h4>{% endif %}
        </div>
    </div>
    <div class="row small-up-1 medium-up-2 large-up-4 teasers">
        {% for recipe in featured_recipes %}
            <div class="column">
                {{ recipe | raw }}
            </div>
        {% endfor %}
    </div>

    <div class="row">
        <div class="small-6 columns">
            <h4 class="text-primary-3">{{ techniques_title }}</h4>
        </div>
        <div class="small-6 columns text-right">
            {% if techniques_url %}<h4><a href="{{ techniques_url }}" class="large button">More</a></h4>{% endif %}
        </div>
    </div>
    <div class="row small-up-1 medium-up-2 large-up-4 teasers">
        {% for post in techniques %}
            <div class="column">
                {{ post | raw }}
            </div>
        {% endfor %}
    </div>

    <div class="row">
        <div class="small-6 columns">
            <h4 class="text-primary-3">Latest</h4>
        </div>
        <div class="small-6 columns text-right">
            <h4><a href="{{ home_url() }}/?post_type=recipes" class="large button">More</a></h4>
        </div>
    </div>
    <div class="row small-up-1 medium-up-2 large-up-4 teasers">
        {% for recipe in recipes %}
            <div class="column">
                {{ recipe | raw }}
            </div>
        {% endfor %}
    </div>
{% endblock %}