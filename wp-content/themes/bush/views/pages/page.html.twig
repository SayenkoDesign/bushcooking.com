{% extends 'template/main.html.twig' %}
{% block title %}
    <div class="row column">
        <h1 class="text-center">{{ the_title() }}</h1>
    </div>
{% endblock %}
{% block content %}
    {% if the_content() %}
        {% if the_post_thumbnail() %}
            <div class="row">
                <div class="medium-6 large-4 columns">
                    {{ the_post_thumbnail() }}
                </div>
                <div class="medium-6 large-8 columns">
                    {{ do_shortcode(the_content()) | raw }}
                </div>
            </div>
        {% else %}
            <div class="row column">
                {{ do_shortcode(the_content()) | raw }}
            </div>
        {% endif %}
    {% else %}
        <h1>Nothing Found</h1>
    {% endif %}
{% endblock %}