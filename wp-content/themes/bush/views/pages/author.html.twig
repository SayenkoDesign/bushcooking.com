{% extends 'template/main.html.twig' %}
{% set has_sidebar = true %}
{% block title %}
    <div class="row column">
        <h1 class="text-center">{{ title | raw }}</h1>
        {% if author.overview %}<h4 id="author-overview">{{ author.overview }}</h4>{% endif %}
    </div>
{% endblock %}
{% block content %}
    {% if content %}
        {% include 'partials/related.html.twig' with {'related': content, 'related_title': false }%}
        {% include 'partials/pagination.html.twig' %}
    {% else %}
        <h1>Nothing Found</h1>
    {% endif %}
{% endblock %}
{% block sidebar %}
    <div id="author-sidebar">
        <div id="author-profile-pic">
            {{ the_author_avatar(400, author.id) }}
        </div>

        <div id="author-bio-teaser">
            {{ author.bio_teaser | raw  }}
            <a data-fancybox data-src="#author-bio" href="javascript:;">
                Read More...
            </a>
        </div>

        <div style="display: none;" id="author-bio">
            <div class="row">
                <div class="small-12 medium-6 large-4 columns">
                    <div id="author-lightbox-profile-pic">{{ the_author_avatar(400, author.id) }}</div>
                    <div id="author-lightbox-social">
                        <a href="{{ author.website }}" rel="nofollow" target="_blank">
                            <span class="fa-stack fa-2x">
                                <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                <i class="fa fa-globe fa-stack-1x"></i>
                            </span>
                        </a>
                        <a href="{{ author.google }}" rel="nofollow" target="_blank">
                            <span class="fa-stack fa-2x">
                                <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                <i class="fa fa-google-plus fa-stack-1x"></i>
                            </span>
                        </a>
                        <a href="{{ author.twitter }}" rel="nofollow" target="_blank">
                            <span class="fa-stack fa-2x">
                                <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                <i class="fa fa-twitter fa-stack-1x"></i>
                            </span>
                        </a>
                        <a href="{{ author.facebook }}" rel="nofollow" target="_blank">
                            <span class="fa-stack fa-2x">
                                <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                <i class="fa fa-facebook fa-stack-1x"></i>
                            </span>
                        </a>
                        <a href="{{ author.linkedin }}" rel="nofollow" target="_blank">
                            <span class="fa-stack fa-2x">
                                <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                <i class="fa fa-linkedin fa-stack-1x"></i>
                            </span>
                        </a>
                        <a href="{{ author.pinterest }}" rel="nofollow" target="_blank">
                            <span class="fa-stack fa-2x">
                                <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                <i class="fa fa-pinterest fa-stack-1x"></i>
                            </span>
                        </a>
                        <a href="{{ author.instagram }}" rel="nofollow" target="_blank">
                            <span class="fa-stack fa-2x">
                                <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                <i class="fa fa-instagram fa-stack-1x"></i>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="small-12 medium-6 large-8 columns">
                    <h4>{{ author.name }}</h4>
                    {{ author.bio | raw  }}
                </div>
            </div>
        </div>

        <div id="author-social">
            <h4>Find me on</h4>
            <a href="{{ author.website }}" rel="nofollow" target="_blank">
                <span class="fa-stack fa-2x">
                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                    <i class="fa fa-globe fa-stack-1x"></i>
                </span>
            </a>
            <a href="{{ author.google }}" rel="nofollow" target="_blank">
                <span class="fa-stack fa-2x">
                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                    <i class="fa fa-google-plus fa-stack-1x"></i>
                </span>
            </a>
            <a href="{{ author.twitter }}" rel="nofollow" target="_blank">
                <span class="fa-stack fa-2x">
                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                    <i class="fa fa-twitter fa-stack-1x"></i>
                </span>
            </a>
            <a href="{{ author.facebook }}" rel="nofollow" target="_blank">
                <span class="fa-stack fa-2x">
                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                    <i class="fa fa-facebook fa-stack-1x"></i>
                </span>
            </a>
            <a href="{{ author.linkedin }}" rel="nofollow" target="_blank">
                <span class="fa-stack fa-2x">
                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                    <i class="fa fa-linkedin fa-stack-1x"></i>
                </span>
            </a>
            <a href="{{ author.pinterest }}" rel="nofollow" target="_blank">
                <span class="fa-stack fa-2x">
                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                    <i class="fa fa-pinterest fa-stack-1x"></i>
                </span>
            </a>
            <a href="{{ author.instagram }}" rel="nofollow" target="_blank">
                <span class="fa-stack fa-2x">
                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                    <i class="fa fa-instagram fa-stack-1x"></i>
                </span>
            </a>
        </div>
    </div>
    {{ the_field("sidebar_content") }}
{% endblock %}