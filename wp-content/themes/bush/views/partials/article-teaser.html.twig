<article id="post-{{ the_id() }}" {{ post_class('recipe-teaser teaser') }}>
    {% if the_post_thumbnail() %}
        {{ the_post_thumbnail('teaser') }}
    {% else %}
        <img src="http://placehold.it/280x280" class="featured"/>
    {% endif %}
    <div class="inner-content">
        <h4 class="title"><a href="{{ the_permalink() }}">{{ the_title() }}</a></h4>
        <p class="author-info">
            By: <a href="{{ the_author_posts_url(the_author_ID()) }}">{{ the_author() }}</a>
            | {{ the_date() | date("F d, Y") }}
        </p>
        <div class="description">
            {{ the_field('teaser_description') }}
        </div>
        <a href="{{ the_permalink() }}" class="read-more">Read More</a>
    </div>
</article><!-- #post -->