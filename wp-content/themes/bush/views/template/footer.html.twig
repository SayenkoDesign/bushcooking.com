<div id="signup">
    <div class="row column">
        <h4 class="text-center">GET OUTDOOR COOKING RECIPIES & EXPERT TECHINQUES</h4>
        
		<form class="signup" action="{{ blog_info('url') }}/thank-you-newsletter/" method="post" enctype="application/x-www-form-urlencoded">	
			<input id="email" name="email" type="email" placeholder="Sign Up for Our Newsletter" value="" required>
			<button name="submit" type="submit" id="submit" class="gform_button button" value="submit">Sign Up</button>
		</form>

    </div>
</div>

<div id="footer-logo">
    <div class="expanded row column">
        {% if header_image() %}
        <a href="{{ home_url() }}">
            <img src="{{ header_image() }}" alt="">
        </a>
        {% endif %}
    </div>
</div>

<div id="footer">
    <div class="row" id="footer-menus">
        <div class="columns" id="recipe-categories">
            <h4>RECIPE CATEGORIES</h4>
            {{
                wp_nav_menu({
                    'theme_location' : 'recipes',
                    'menu_class'     : "no-bullet",
                    'depth'          : 1
                })
            }}
        </div>
        <div class="columns text-center" id="footer-menu">
            <ul class="menu">
                <li><a href="{{ the_field("instagram", "option") }}" target="_blank"><i class="fa fa-instagram"></i></a></li>
                <li><a href="{{ the_field("pinterest", "option") }}" target="_blank"><i class="fa fa-pinterest"></i></a></li>
                <li><a href="{{ the_field("facebook", "option") }}" target="_blank"><i class="fa fa-facebook"></i></a></li>
                <li><a href="{{ the_field("twitter", "option") }}" target="_blank"><i class="fa fa-twitter"></i></a></li>
                <li><a href="{{ the_field("google_plus", "option") }}" target="_blank"><i class="fa fa-google-plus"></i></a></li>
            </ul>
            <p><a href="{{ the_field("advertise_with_us_page", "option") }}">Advertise with Us</a></p>
            <img src="{{ stylesheet_directory_uri }}/images/advertise-with-us-bottom.png" alt="">
        </div>
        <div class="columns end" id="blog-categories">
            <h4>BLOG CATEGORIES</h4>
            {{
                wp_nav_menu({
                    'theme_location' : 'categories',
                    'menu_class'     : "no-bullet",
                    'depth'          : 1
                })
            }}
        </div>
    </div>
    <div class="expanded row column text-center" id="footer-copyright">
        <p>
            &copy; {{ date() | date('Y') }} Bush Cooking.  All rights reserved. <a href="http://www.sayenkodesign.com/" target="_blank">Seattle Web Design</a> by Sayenko Design.
            |
            <a href="{{ the_field("privacy_policy_page", "option") }}">Privacy Policy</a>
        </p>
    </div>
</div>
<div id="print-footer" class="hide print-only">
    <div class="print-logo"><img src="{{ stylesheet_directory_uri }}/images/fav-icon.jpg" alt="Logo"> <span class="title">BUSH COOKING.COM</span></div>
    <p>
        Look forward to seeing you next time you are looking for an outdoor cooking recipe.
        <br>
        All rights reserved Â© 2017 Bush Cooking

    </p>
</div>

{{ wp_footer() }}

</body>
</html>