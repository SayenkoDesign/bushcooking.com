{% if has_sidebar is not defined %}{% set has_sidebar = false %}{% endif %}
{% block pre_content %}
{% endblock %}
<div id="primary" class="content-area">
    <div id="content" class="content" role="main">
        {% block title %}
        {% endblock %}
        <div class="row" {% if content_attr is defined %}{{ content_attr|raw }}{% endif %} data-equalizer data-equalize-on="medium">
            <div class="small-12 {% if has_sidebar %}medium-7 large-8{% endif %} columns" data-equalizer-watch>
                {% block content %}
                {% endblock %}
            </div>
            {% if has_sidebar %}
                <div class="small-12 medium-5 large-4 columns large-collapse" data-equalizer-watch>
                    <div id="side">
                        {% block sidebar %}
                        {% endblock %}
                    </div>
                    <div id="sponsored-ad" class="hide-for-small show-for-large">
                        <div class="row columns">
                            {{ do_shortcode('[sponsored_ad]') }}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>